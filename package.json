{
  "private": true,
  "scripts": {
    "build": "npm run clean && cross-env NODE_ENV=production npm run build:all",
    "build:all": "run-p build:css build:html build:img build:js",
    "build:css": "run-s build:sass build:postcss",
    "build:html": "eleventy",
    "build:img": "node imagemin.js",
    "build:js": "webpack",
    "build:postcss": "postcss dist/assets/css/style.css -c=postcss.config.js --no-map -o dist/assets/css/style.css",
    "build:sass": "sass src/assets/css:dist/assets/css --style expanded --no-source-map",
    "clean": "rimraf ./dist",
    "serve": "browser-sync start --config bs-config.js",
    "start": "run-s build:all watch",
    "watch": "run-p clean serve watch:*",
    "watch:css": "onchange \"src/assets/css\" -- npm run build:css",
    "watch:html": "eleventy  --watch",
    "watch:img": "onchange \"./src/**/*.{jpg,png,gif,svg}\" -- npm run build:img",
    "watch:js": "webpack -w"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.7",
    "autoprefixer": "^10.3.1",
    "babel-loader": "^8.2.2",
    "browser-sync": "^2.27.4",
    "cross-env": "^7.0.3",
    "imagemin-cli": "^6.0.0",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-keep-folder": "^5.3.2",
    "imagemin-mozjpeg": "^9.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-svgo": "^9.0.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.3.5",
    "postcss-cli": "^8.3.1",
    "rimraf": "^3.0.2",
    "sass": "^1.35.2",
    "webpack": "^5.44.0",
    "webpack-cli": "^4.7.2"
  }
}
